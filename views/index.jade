div.initialpage
	form.create(action='/create',method='post',name='create')
		- if (flash.error)
			p.error= flash.error
		p
			input#mindmapname.test(type='text',name='mindmapname', placeholder="Name your mindmap")
		p
			input(type='submit',value='create')

#rooms
	ul
	-mindmaps.forEach(function(mindmap){
		li
			a(href='/mindmap/#{mindmap.name}')=mindmap.name
	-})
